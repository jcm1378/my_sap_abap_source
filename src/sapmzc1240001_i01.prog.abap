MODULE user_command_0100 INPUT.

  case gv_okcode.
    when 'SAVE'.
      clear gv_okcode.
      PERFORM save_data.
   endcase.

ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  EXIT  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE exit INPUT.
  CASE gv_okcode.
    WHEN 'BACK' or 'canc'.
      LEAVE to SCREEN 0.
  ENDCASE.
ENDMODULE.
